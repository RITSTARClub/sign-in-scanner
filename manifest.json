{
	"manifest_version": 2,
	"name": "STAR ID Card Scanner",
	"version": "1.1",
	"description": "Scans STAR ID cards for standard sign in forms.",
	"icons": {
		"32": "icon.png"
	},
	
	"permissions": [
		"activeTab",
		"declarativeContent",
		"storage",
		"*://ritstar.com/*",
		"*://docs.google.com/forms/*"
	],
	
	"content_scripts": [{
		"matches": [
			"*://docs.google.com/forms/*"
		],
		"css": [
			"scanner.css"
		],
		"js": [
			"instascan.min.js",
			"scanner.js"
		]
	}],
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"page_action": {
		"default_icon": "icon_struck.png"
	}
}
